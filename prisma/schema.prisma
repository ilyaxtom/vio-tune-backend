generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  ARTIST
}

model User {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  username     String   @unique
  passwordHash String
  email        String   @unique
  country      String
  language     String
  description  String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())

  playlists      Playlist[]
  likedSongs     UserLikeSong[]
  likedAlbums    UserLikeAlbum[]
  likedPlaylists UserLikePlaylist[]
}

model Artist {
  id      String @id @default(uuid())
  name    String
  country String

  songs Song[]
}

model Album {
  id          String @id @default(uuid())
  title       String
  releaseYear Int
  coverUrl    String

  songs   Song[]
  likedBy UserLikeAlbum[]
  Genre   Genre?          @relation(fields: [genreId], references: [id])
  genreId String?
}

model Song {
  id       String @id @default(uuid())
  title    String
  duration String
  fileUrl  String

  artist       Artist         @relation(fields: [artistId], references: [id])
  album        Album          @relation(fields: [albumId], references: [id])
  likedBy      UserLikeSong[]
  albumId      String
  PlaylistItem PlaylistItem[]
  artistId     String
}

model Genre {
  id    String  @id @default(uuid())
  name  String
  Album Album[]
}

model Playlist {
  id               String             @id @default(uuid())
  title            String
  visibility       String
  createdAt        DateTime           @default(now())
  PlaylistItem     PlaylistItem[]
  UserLikePlaylist UserLikePlaylist[]
  User             User?              @relation(fields: [userId], references: [id])
  userId           String?
}

model PlaylistItem {
  playlistId String
  songId     String

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  song     Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([playlistId, songId])
}

model UserLikeSong {
  userId String
  songId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([userId, songId])
}

model UserLikeAlbum {
  userId  String
  albumId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@unique([userId, albumId])
}

model UserLikePlaylist {
  userId     String
  playlistId String

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@unique([userId, playlistId])
}
