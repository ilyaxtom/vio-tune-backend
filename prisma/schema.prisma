generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  ARTIST
}

enum AlbumType {
  ALBUM
  SINGLE
  COMPILATION
  EP
}

enum PlaylistVisibility {
  PUBLIC
  PRIVATE
}

model User {
  id                String   @id @default(uuid())
  firstName         String?
  lastName          String?
  username          String   @unique
  passwordHash      String
  email             String   @unique
  country           String?
  language          String?
  description       String?
  isVerified        Boolean  @default(false)
  verificationToken String?
  role              Role     @default(USER)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  playlists      Playlist[]
  likedSongs     UserLikeSong[]
  likedAlbums    UserLikeAlbum[]
  likedPlaylists UserLikePlaylist[]

  @@map("users")
}

model Artist {
  id        String   @id @default(uuid())
  name      String
  slug      String?  @unique
  artwork   String
  country   String
  updatedAt DateTime @updatedAt

  songs  Song[]
  albums Album[]

  @@map("artists")
}

model Album {
  id          String    @id @default(uuid())
  artistId    String
  title       String
  slug        String?
  releaseDate DateTime
  artwork     String
  copyright   String
  type        AlbumType
  recordLabel String
  url         String

  artist  Artist          @relation(fields: [artistId], references: [id])
  songs   Song[]
  likedBy UserLikeAlbum[]
  genre   Genre?          @relation(fields: [genreId], references: [id])
  genreId String?

  @@index([artistId])
  @@map("albums")
}

model Song {
  id       String @id @default(uuid())
  title    String
  duration Int
  fileUrl  String

  artist       Artist         @relation(fields: [artistId], references: [id])
  album        Album          @relation(fields: [albumId], references: [id])
  likedBy      UserLikeSong[]
  albumId      String
  playlistItem PlaylistItem[]
  artistId     String

  @@map("songs")
}

model Genre {
  id     String  @id @default(uuid())
  name   String
  albums Album[]

  @@map("genres")
}

model Playlist {
  id               String             @id @default(uuid())
  title            String
  slug             String             @unique
  visibility       PlaylistVisibility
  createdAt        DateTime           @default(now())
  playlistItem     PlaylistItem[]
  userLikePlaylist UserLikePlaylist[]
  user             User?              @relation(fields: [userId], references: [id])
  userId           String?

  @@map("playlists")
}

model PlaylistItem {
  playlistId String
  songId     String

  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)
  song     Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@id([playlistId, songId])
  @@map("playlistItems")
}

model UserLikeSong {
  userId String
  songId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  song Song @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@id([userId, songId])
  @@map("userLikeSongs")
}

model UserLikeAlbum {
  userId  String
  albumId String

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@id([userId, albumId])
  @@map("userLikeAlbums")
}

model UserLikePlaylist {
  userId     String
  playlistId String

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  playlist Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@id([userId, playlistId])
  @@map("userLikePlaylists")
}
